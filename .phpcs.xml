<?xml version="1.0" ?>
<ruleset>
	<description>WP_Spirit_Maintenance Coding Standards</description>

	<rule ref="WordPress">
		<!-- Almost anything is a class here! Should I almost always say that? -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<!-- Almost anything is a class and you're asking for classes file-level isolation, so read the class comment -->
		<exclude name="Squiz.Commenting.FileComment.Missing"/>
		<!-- Ops, windows -->
		<exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
		<!-- I only like the name of this rule -->
		<exclude name="WordPress.PHP.YodaConditions.NotYoda" />
	</rule>

</ruleset>